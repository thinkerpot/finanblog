---
import "../style/fonts.css";
import "../style/global.css";

import { SITE_TITLE, SITE_DESCRIPTION } from "../config";

const { title, description, image = "/home-blog-card.png" } = Astro.props;
---

<head>

	<meta name="google-site-verification" content="64jIY252FN-vd9F72KF2HfrHCmfgCCTug-FNGSYYn5A" />

<!-- Google tag (gtag.js) -->
<script async src="https://www.googletagmanager.com/gtag/js?id=G-8KLHP84Z98"></script>
<script>
  window.dataLayer = window.dataLayer || [];
  function gtag(){dataLayer.push(arguments);}
  gtag('js', new Date());

  gtag('config', 'G-8KLHP84Z98');
</script>

	<!-- Global Metadata -->
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width,initial-scale=1" />
	<link rel="icon" type="image/svg+xml" href="/favicon.ico" />
	<meta name="generator" content={Astro.generator} />
	<meta name="keywords" content="keuangan, roadmap finansial, investasi pemula, edukasi cuan, anak muda" />
  	<meta name="robots" content="index, follow" />
  	<meta name="publisher" content="Finance by EduCentrals" />
  	<link rel="canonical" href={`https://finance.educentrals.com${Astro.url.pathname}`} />

	<!-- Primary Meta Tags -->
	<title>{title}</title>
	<meta name="title" content={title} />
	<meta name="description" content={description} />

	<!-- Open Graph / Facebook -->
	<meta property="og:type" content="website" />
	<meta property="og:url" content={Astro.url} />
	<meta property="og:title" content={title} />
	<meta property="og:description" content={description} />
	<meta property="og:image" content={new URL(image, Astro.url)} />

	<!-- Twitter -->
	<meta property="twitter:card" content="summary_large_image" />
	<meta property="twitter:url" content={Astro.url} />
	<meta property="twitter:title" content={title} />
	<meta property="twitter:description" content={description} />
	<meta name="twitter:creator" content="@cassidoo" />
	<meta name="twitter:image" content={new URL(image, Astro.url)} />

	<!-- RSS Link -->
	<link
		rel="alternate"
		href="/rss.xml"
		type="application/rss+xml"
		title={SITE_TITLE}
	/>

	<!-- Sitemap -->
	<link rel="sitemap" href="/sitemap-index.xml" />
</head>
