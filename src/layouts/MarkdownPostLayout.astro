---
const { title, description, pubDate, heroImage } = Astro.props;
---

<html lang="id">
  <head>
    <meta charset="UTF-8" />
    <title>{title} | Finance by EduCentrals</title>
    <meta name="description" content={description} />
    <meta name="keywords" content="keuangan, anak muda, roadmap finansial, investasi pemula, tips cuan" />
    <meta name="author" content="Finance by EduCentrals" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- OpenGraph -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={heroImage ?? '/default-og-image.jpg'} />
    <meta property="og:type" content="article" />
    <meta property="og:site_name" content="Finance by EduCentrals" />
    <meta property="og:url" content={`https://finance.educentrals.com${Astro.url.pathname}`} />

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={heroImage ?? '/default-og-image.jpg'} />

    <!-- Schema.org JSON-LD -->
    <script type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@type": "BlogPosting",
      "headline": "{title}",
      "description": "{description}",
      "image": "{heroImage ?? '/default-og-image.jpg'}",
      "author": {
        "@type": "Organization",
        "name": "Finance by EduCentrals"
      },
      "publisher": {
        "@type": "Organization",
        "name": "Finance by EduCentrals",
        "logo": {
          "@type": "ImageObject",
          "url": "https://finance.educentrals.com/logo.png"
        }
      },
      "datePublished": "{pubDate}",
      "mainEntityOfPage": {
        "@type": "WebPage",
        "@id": "https://finance.educentrals.com"
      }
    }
    </script>
  </head>
  <body>
    <slot />
  </body>
</html>
